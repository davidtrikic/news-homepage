	"defaultSeverity": "warning",
	"rules": {
		"block-no-empty": true,
		"length-zero-no-unit": true,
		"max-nesting-depth": 3,
		"number-no-trailing-zeros": true,
		"selector-max-id": 0,
        "selector-class-pattern": null
	},
	"ignoreFiles": [
		"src/scss/icon-font/iconfont.scss",
		"src/iconfont-template/iconfont.scss",
		"src/scss/_reset.scss",
		"src/scss/_reset_custom.scss"
	],
	"extends": "stylelint-config-standard-scss"
}